<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.mrcet.oar.controllers.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>com.mrcet.oar.controllers.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.mrcet.oar.controllers.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountDetailsServlet</servlet-name>
        <servlet-class>com.mrcet.oar.controllers.AccountDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TicketBookingServlet</servlet-name>
        <servlet-class>com.mrcet.oar.controllers.TicketBookingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmTicketServlet</servlet-name>
        <servlet-class>com.mrcet.oar.controllers.ConfirmTicketServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminDetailsServlet</servlet-name>
        <servlet-class>com.mrcet.oar.controllers.AdminDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ApproveUserServlet</servlet-name>
        <servlet-class>com.mrcet.oar.controllers.ApproveUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountDetailsServlet</servlet-name>
        <url-pattern>/account</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TicketBookingServlet</servlet-name>
        <url-pattern>/bookticket</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmTicketServlet</servlet-name>
        <url-pattern>/confirm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminDetailsServlet</servlet-name>
        <url-pattern>/adminaccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ApproveUserServlet</servlet-name>
        <url-pattern>/approveuser</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>./home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
